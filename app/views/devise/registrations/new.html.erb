
<div class="container" >
  <h2 style="text-align: center">Para realizar seu cadastro, precisamos de alguns dados:</h2>
  <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" },
                placeholder: "João"
                %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" },
                placeholder: "Machado"
                %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  placeholder: "joao.machado@2mao.com.br"
                  %>
      <%= f.input :cpf,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "cpf", class: "cpf" },
                  placeholder: "000.000.000-00"
                  %>
    <%= f.input  :phone,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone", class:"phone_with_ddd" },
                  placeholder: "(21)00000-0000"
                  %>
    <%= f.input  :birthdate,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "birthdate"}
                  %>
    <%= f.input  :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" },
                  placeholder: "Meu endereço"
                  %>                             
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Criar a minha conta", class: 'btn btn-primary' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
