
<div class="container" >
  <h2 style="text-align: center">Para realizar seu cadastro, precisamos de alguns dados:</h2>
  <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :cpf,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "cpf" }%>
    <%= f.input  :phone,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone" }%>
    <%= f.input  :birthdate,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "birthdate" },
                  as: :string,
                  input_html: { id: 'flat_date' }
                  %>
    <%= f.input  :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>                             
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Criar a minha conta", class: 'btn btn-primary' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
