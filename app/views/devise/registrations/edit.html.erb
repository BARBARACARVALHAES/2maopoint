<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" },
                placeholder: "João"
                %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" },
                placeholder: "Machado"
                %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "joao.machado@2mao.com.br"
                %>
    <%= f.input :cpf,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "cpf" },
                placeholder: "000.000.000-00"
                %>
    <%= f.input  :phone,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone", class:"phone_with_ddd" },
                  placeholder: "(00)00000-0000"
                  %>
    <%= f.input  :birthdate,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "birthdate" },
                  as: :string,
                  input_html: { id: 'flat_date' }
                  %>
    <%= f.input  :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" },
                  placeholder: "Meu endereço"
                  %>                             
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }
                hint: "Deixa em branco se você não quer modificar ele",
                %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Precisamos da sua senha atual para confirmar as mudançãs",
                required: true,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :optin_ads,
                  label: "Gostaria de receber ofertas do Carrefour e parceiros" %>                                                          
      <%= f.input :optin_privacy, 
                  required: true,
                  label: "Aceito os termos de uso e de privacidade" %>      
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>