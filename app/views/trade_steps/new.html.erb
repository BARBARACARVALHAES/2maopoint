<%= simple_form_for(@trade, url: trade_steps_path) do |f| %>
  <%= f.input :author, lable: "Nesta transação, você é o:", as: :radio_buttons, collection: ["Vendedor", "Comprador"] %>
  <%= f.input :item_category_id, as: :select, label: "A categoria do item é:", collection: @item_categories %>
  <%= f.input :item, label: "O item transacionado é:" %>
  <%= f.submit "Avançar" %>
<% end %>
