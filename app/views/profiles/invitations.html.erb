<h1>Agendamentos</h1>
<p>Olá <%= @user.first_name %>, confira todos os seus agendamentos e convites.</p>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Convidado</th>
        <th scope="col">Data</th>
        <th scope="col">Local</th>
      </tr>
    </thead>
    <tbody>
      <% @trades.each do |trade| %>
        <tr>
          <td>
            <% if trade.author == trade.buyer %>
              <%= trade.seller.name if trade.seller %>
            <% else %>
              <%= trade.buyer.name if trade.buyer%>
            <% end %>
          </td>
          <td><%= trade.date %></td>
          <td><%= trade.carrefour_unit.name if trade.carrefour_unit%></td>
        </tr>
      <% end %>
    </tbody>
  </table>



