<div class="container content-container">
  <h1>Agendamentos</h1>
  <p class="subtitle">Ol√° <%= @user.first_name %>, confira todos os seus agendamentos e convites.</p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Convidado</th>
          <th scope="col">Data</th>
          <th scope="col">Local</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @trades.each do |trade| %>
          <tr>
            <td><%= trade.invited.name %></td>
            <td><%= trade.date.strftime("%d/%m/%Y") %></td>
            <td><%= trade.carrefour_unit.name if trade.carrefour_unit%></td>
            <td><%= link_to "Reagendar" %></td>
            <td><%= link_to "Cancelar" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
